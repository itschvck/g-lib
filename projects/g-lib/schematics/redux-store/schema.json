{
  "$schema": "http://json-schema.org/schema",
  "$id": "redux-store",
  "title": "g-lib Redux Store Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the entity",
      "type": "string",
      "x-prompt": "What is the name of the entity?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path at which to create the files, relative to the workspace root.",
      "default": "src/app/core/domain/entities/"
    }
  },
  "required": ["name"]
}
